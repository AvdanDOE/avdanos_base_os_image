#!/bin/zsh
# Placeholder for now

# Initialize session sentinel
if [[ -f /tmp/avdanos/doebox-session ]]; then
    mkdir -p /home/liveuser/.config/eww/
    cp -r /etc/avdanos/dock /home/liveuser/.config/eww/dock
    cp -r /etc/avdanos/globalassets /home/liveuser/.config/eww/globalassets
    chmod $USER:$USER /home/liveuser/.config/eww/dock
    # Start EWW
    eww -c /home/liveuser/.config/eww/dock daemon
    eww -c /home/liveuser/.config/eww/dock open-many dockdynamic dockmain dockstatic dockstatus
else
    echo "Unable to start dock. Are you running in DOEBox?"
fi